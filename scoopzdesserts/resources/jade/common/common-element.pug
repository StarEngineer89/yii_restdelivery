            i.ps-icon--shopping-cart
        .ps-cart__listing
            .ps-cart__content
                .ps-cart-item
                    a(href='#').ps-cart-item__close
                    .ps-cart-item__thumbnail
                        a(href='product-detail.html')
                        img(src="images/cake/img-cake-1.jpg" alt="")
                    .ps-cart-item__content
                        a(href='product-detail.html').ps-cart-item__title Amazin’ Glazin’

            .ps-cart__footer
                a(href='cart.html').ps-btn.ps-btn--view-bag View bag

mixin pagination()
    .ps-pagination
        ul.pagination
            li
                a(href="#")
                    i.fa.fa-arrow-left
            li.active
                a(href="#") 1
            li
                a(href="#") 2
            li
                a(href="#") 3
            li
                a(href="#") 4
            li
                a(href="#")
                    i.fa.fa-arrow-right

mixin shop_featured()
    .ps-shop-features
        .row
            +column({cols: [4, 4, 6, 12]})
                img(src="images/product-banner/012x.jpg" alt="").mb-30
            +column({cols: [8, 8, 6, 12]})
                img(src="images/product-banner/022x.jpg" alt="").mb-30

mixin shop_filter()
    .ps-shop-filter
        .row
            +column({cols: [5, 4, 4, 12]})
                .form-group
                    label Short by:
                    select.ps-select(data-placeholder="Popupar product")
                        option(value="01") Popular products
                        option(value="01") Item 01
                        option(value="02") Item 02
                        option(value="03") Item 03
            +column({cols: [5, 4, 4, 12]})
                .form-group
                    label Show:
                    select.ps-select(data-placeholder="Show:")
                        option(value="01") SHOW
                        option(value="02") Item 02
                        option(value="03") Item 03
            +column({cols: [2, 4, 4, 12]})
                ul.ps-shop-switch
                    li.active: a(href="product-listing.html"): i.fa.fa-th
                    li: a(href="product-grid.html"): i.fa.fa-list

mixin form-input(label, required=true, extraClass, type='text', inputClass='form-control')
    .form-group(class=extraClass)
        label #{label}
            if (required == true)
                span *
        input(type=type, class=inputClass)


    .ps-section--hero
        img(src="images/hero/03.jpg" alt="")
        .ps-section__content.text-center
            h3.ps-section__title OUR BAKERY
            .ps-breadcrumb
                ol.breadcrumb
                    li: a(href="index.html") Home
                    li.active About Us
    include ../partials/section/about-intro
    include ../partials/section/award
    - var teamType = 'about';
    include ../partials/section/team
    include ../partials/section/partner
    include ../partials/section/contact
    include ../partials/section/subscribe

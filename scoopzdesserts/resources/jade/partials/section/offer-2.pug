block page
    include ../../data/list-product
    section.ps-section.ps-section--offer.pt-80.pb-100
        .container
            .ps-section__header.text-center.mb-100
                h4.ps-section__top Making People Happy
                h3.ps-section__title.ps-section__title--full OFFER THIS WEEK
            .ps-section__content
                .masonry-wrapper(data-col-md="4" data-col-sm="2" data-col-xs='1' data-gap="30" data-radio='100%')
                    .ps-masonry
                        .grid-sizer
                        .grid-item.high.wide
                            .grid-item__content-wrapper
                                .ps-offer
                                    img(src="images/offer/banner-4.jpg" alt="")
                                    a(href='#').ps-offer__overlay
                        .grid-item
                            .grid-item__content-wrapper
                                .ps-offer
                                    img(src="images/offer/banner-2.jpg" alt="")
                                    a(href='#').ps-offer__overlay
                        .grid-item.high
                            .grid-item__content-wrapper
                                .ps-offer
                                    img(src="images/offer/banner-3.jpg" alt="")
                                    a(href='#').ps-offer__overlay
                .mt-50
                    each val, index in offer_2
                        +column({cols: [3, 3, 6, 12]})
                            .ps-product
                                .ps-product__thumbnail
                                    if (index % 2 == 0)
                                        .ps-badge: span -50%
                                    if (index == 3 || index == 7)
                                        .ps-badge.ps-badge--new: span New
                                    a(href='product-detail.html').ps-product__overlay
                                    img(src=val.imagepath alt="")
                                    ul.ps-product__action
                                        li: a(href='#quickview-modal' data-effect="mfp-zoom-out" data-tooltip="View").popup-modal
                                            i.ps-icon--search
                                        li: a(href='#' data-tooltip="Add to wishlist"): i.ps-icon--heart
                                        li: a(href='#' data-tooltip="Compare"): i.ps-icon--reload
                                        li: a(href='#' data-tooltip="Add to cart"): i.ps-icon--shopping-cart
                                .ps-product__content
                                    a(href='product-detail.html').ps-product__title #{val.title}
                                    .ps-product__category
                                        each item in val.category
                                            a(href='product-listing.html').ps-product__category #{item}
                                    select.ps-rating
                                        option(value='1') 1
                                        option(value='1') 2
                                        option(value='1') 3
                                        option(value='1') 4
                                        option(value='5') 5
                                    p.ps-product__price #{val.price}
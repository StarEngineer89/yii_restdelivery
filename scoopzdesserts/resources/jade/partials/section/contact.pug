block section
    section.ps-section.ps-section--map
        #contact-map(data-address="New York, NY" data-title="BAKERY LOCATION!" data-zoom="17")
        .ps-delivery
            .ps-delivery__header
                h3 Contact Us
                p Our Company is the best, meet the creative team that never sleeps. Say something to us we will answer to you.
            .ps-delivery__content
                form.ps-delivery__form(action="product-listing.html" method="post")
                    .form-group
                        label Name
                            span *
                        input.form-control(type="text")
                    .form-group
                        label Email
                            span *
                        input.form-control(type="email")
                    .form-group
                        label Phone Number
                            span *
                        input.form-control(type="text")
                    .form-group
                        label Your message
                            span *
                        textarea.form-control
                    .form-group.text-center
                        button.ps-btn Send Message
                            i.fa.fa-angle-right

block section
    include ../../data/list-product

    section.ps-section.ps-section--best-seller.pt-40.pb-100
        .container
            .ps-section__header.text-center.mb-50
                h4.ps-section__top Sweet Cupcakes
                h3.ps-section__title.ps-section__title--full BEST SELLER
            .ps-section__content
                .owl-slider.owl-slider--best-seller(
                    data-owl-auto= 'true',
                    data-owl-loop= 'true',
                    data-owl-speed= '5000',
                    data-owl-gap= '30',
                    data-owl-nav= 'true',
                    data-owl-dots= 'false',
                    data-owl-animate-in= '',
                    data-owl-animate-out= '',
                    data-owl-item= '4',
                    data-owl-item-xs= '1',
                    data-owl-item-sm= '2',
                    data-owl-item-md= '3',
                    data-owl-item-lg= '4',
                    data-owl-nav-left = '<i class="ps-icon--back"></i>',
                    data-owl-nav-right = '<i class="ps-icon--next"></i>',
                    )
                        each val, index in best_seller
                            .ps-product
                                .ps-product__thumbnail
                                    if (index % 2 == 0)
                                        .ps-badge: span -50%
                                    if (index == 3)
                                        .ps-badge.ps-badge--new: span New
                                    a(href='product-detail.html').ps-product__overlay
                                    img(src=val.imagepath alt="")
                                    ul.ps-product__action
                                        li
                                            a(href='#quickview-modal' data-effect="mfp-zoom-out" data-tooltip="View").popup-modal
                                                i.ps-icon--search
                                        li
                                            a(href='#' data-tooltip="Add to wishlist")
                                                i.ps-icon--heart
                                        li
                                            a(href='#' data-tooltip="Compare")
                                                i.ps-icon--reload
                                        li
                                            a(href='#' data-tooltip="Add to cart")
                                                i.ps-icon--shopping-cart
                                .ps-product__content
                                    a(href='product-detail.html').ps-product__title #{val.title}
                                    .ps-product__category
                                        each item in val.category
                                            a(href='product-listing.html').ps-product__category #{item}
                                    select.ps-rating
                                        option(value='1') 1
                                        option(value='1') 2
                                        option(value='1') 3
                                        option(value='1') 4
                                        option(value='5') 5
                                    p.ps-product__price #{val.price}

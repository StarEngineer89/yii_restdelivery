block section
    include ../../data/menu-listing

    if (menuType == 2)
        section.ps-section.ps-section--offer.pt-80.pb-80
            .container
                .ps-section__header.text-center.mb-60
                    h4.ps-section__top Making People Happy
                    h3.ps-section__title.ps-section__title--full OFFER THIS WEEK
                .ps-section__content
                    .masonry-wrapper(data-col-md="4" data-col-sm="2" data-col-xs='1' data-gap="30" data-radio='100%')
                        .ps-masonry
                            .grid-sizer
                            .grid-item.high.wide
                                .grid-item__content-wrapper
                                    .ps-offer
                                        img(src="images/offer/banner-4.jpg" alt="")
                                        a(href='#').ps-offer__overlay
                            .grid-item
                                .grid-item__content-wrapper
                                    .ps-offer
                                        img(src="images/offer/banner-2.jpg" alt="")
                                        a(href='#').ps-offer__overlay
                            .grid-item.high
                                .grid-item__content-wrapper
                                    .ps-offer
                                        img(src="images/offer/banner-3.jpg" alt="")
                                        a(href='#').ps-offer__overlay
                    .row
                        +column({cols: [6, 6, 12, 12]})
                            each val in menu_3
                                .ps-product--list.mt-60
                                    .ps-product__thumbnail
                                        a(href='product-detail.html').ps-product__overlay
                                        img(src=val.imagepath alt="")
                                    .ps-product__content
                                        h4.ps-product__title
                                            a(href='product-detail.html') #{val.title}
                                        p #{val.description}
                                        p.ps-product__price
                                            del #{val.originPrice}
                                            | #{val.salePrice}
                                        a(href='cart.html').ps-btn.ps-btn--xs Order now
                                            i.fa.fa-angle-right
                        +column({cols: [6, 6, 12, 12]})
                            each val in menu_4
                                .ps-product--list.mt-60
                                    .ps-product__thumbnail
                                        a(href='product-detail.html').ps-product__overlay
                                        img(src=val.imagepath alt="")
                                    .ps-product__content
                                        h4.ps-product__title
                                            a(href='product-detail.html') #{val.title}
                                        p #{val.description}
                                        p.ps-product__price
                                            del #{val.originPrice}
                                            | #{val.salePrice}
                                        a(href='cart.html').ps-btn.ps-btn--xs Order now
                                            i.fa.fa-angle-right
    else
        section.ps-section.pt-80.pb-40
            .container
                +column({cols: [6, 6, 12, 12]})
                    .ps-section__header.mb-50
                        h3.ps-section__title.ps-section__title--left BREAD
                    .ps-section__content
                        each val in menu_1
                            .ps-product--list
                                .ps-product__thumbnail
                                    a(href='product-detail.html').ps-product__overlay
                                    img(src=val.imagepath alt="")
                                .ps-product__content
                                    h4.ps-product__title
                                        a(href='product-detail.html') #{val.title}
                                    p #{val.description}
                                    p.ps-product__price
                                        del #{val.originPrice}
                                        | #{val.salePrice}
                                    a(href='cart.html').ps-btn.ps-btn--xs Order now
                                        i.fa.fa-angle-right
                +column({cols: [6, 6, 12, 12]})
                    .ps-section__header.mb-50
                        h3.ps-section__title.ps-section__title--left COOKIES
                    .ps-section__content
                        each val in menu_2
                            .ps-product--list
                                .ps-product__thumbnail
                                    a(href='product-detail.html').ps-product__overlay
                                    img(src=val.imagepath alt="")
                                .ps-product__content
                                    h4.ps-product__title
                                        a(href='product-detail.html') #{val.title}
                                    p #{val.description}

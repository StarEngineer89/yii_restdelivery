block module
    include ../../data/list-product
    .ps-section.pt-80.pb-80
        .container
            .ps-product--detail
                .row
                    +column({cols: [5, 5, 12, 12]})
                        .ps-product__thumbnail
                            .ps-badge: span 50%
                            .owl-slider.primary(
                            data-owl-auto= 'true',
                            data-owl-loop= 'false',
                            data-owl-speed= '10000',
                            data-owl-gap= '0',
                            data-owl-nav= 'false',
                            data-owl-dots= 'false',
                            data-owl-animate-in= '',
                            data-owl-animate-out= '',
                            data-owl-item= '1',
                            data-owl-item-xs= '1',
                            data-owl-item-sm= '1',
                            data-owl-item-md= '1',
                            data-owl-item-lg= '1',
                            data-owl-nav-left = '<i class="fa fa-angle-left"></i>',
                            data-owl-nav-right = '<i class="fa fa-angle-right"></i>',
                            )
                                .ps-product__image
                                    img(src="images/cake/img-cake-12.jpg" alt="")
                                .ps-product__image
                                    img(src="images/cake/img-cake-11.jpg" alt="")
                                .ps-product__image
                                    img(src="images/cake/img-cake-10.jpg" alt="")
                                .ps-product__image
                                    img(src="images/cake/img-cake-6.jpg" alt="")
                                .ps-product__image
                                    img(src="images/cake/img-cake-5.jpg" alt="")
                            .owl-slider.second(
                            data-owl-auto= 'true',
                            data-owl-loop= 'false',
                            data-owl-speed= '10000',
                            data-owl-gap= '20',
                            data-owl-nav= 'false',
                            data-owl-dots= 'false',
                            data-owl-animate-in= '',
                            data-owl-animate-out= '',
                            data-owl-item= '4',
                            data-owl-item-xs= '2',
                            data-owl-item-sm= '3',
                            data-owl-item-md= '4',
                            data-owl-item-lg= '4',
                            data-owl-nav-left = '<i class="fa fa-angle-left"></i>',
                            data-owl-nav-right = '<i class="fa fa-angle-right"></i>',
                            )
                                img(src="images/cake/img-cake-12.jpg" alt="")
                                img(src="images/cake/img-cake-11.jpg" alt="")
                                img(src="images/cake/img-cake-10.jpg" alt="")
                                img(src="images/cake/img-cake-6.jpg" alt="")
                                img(src="images/cake/img-cake-5.jpg" alt="")

                    +column({cols: [7, 7, 12, 12]})
                        header
                            h3.ps-product__name Anytime Cakes
                            select.ps-rating
                                option(value='1') 1
                                option(value='1') 2
                                option(value='1') 3
                                option(value='1') 4
                                option(value='5') 5
                            p.ps-product__price £15.00 <del>£25.00</del>
                            a(href='#quickview-modal' data-effect="mfp-zoom-out").ps-product__quickview.popup-modal QUICK OVERVIEW
                            .ps-product__description

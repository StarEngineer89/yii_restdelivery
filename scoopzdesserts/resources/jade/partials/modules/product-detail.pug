block module
    include ../../data/list-product
.ps-section.pt-80.pb-80
    .container
        .ps-product--detail
            .row
                +column({cols: [5, 5, 12, 12]})
                    .ps-product__thumbnail
                        .ps-badge: span 50%
                        .owl-slider.primary(
                        data-owl-auto= 'true',
                        data-owl-loop= 'false',
                        data-owl-speed= '10000',
                        data-owl-gap= '0',
                        data-owl-nav= 'false',
                        data-owl-dots= 'false',
                        data-owl-animate-in= '',
                        data-owl-animate-out= '',
                        data-owl-item= '1',
                        data-owl-item-xs= '1',
                        data-owl-item-sm= '1',
                        data-owl-item-md= '1',
                        data-owl-item-lg= '1',
                        data-owl-nav-left = '<i class="fa fa-angle-left"></i>',
                        data-owl-nav-right = '<i class="fa fa-angle-right"></i>',
                        )
                            .ps-product__image
                                img(src="images/cake/img-cake-12.jpg" alt="")
                            .ps-product__image
                                img(src="images/cake/img-cake-11.jpg" alt="")
                            .ps-product__image
                                img(src="images/cake/img-cake-10.jpg" alt="")
                            .ps-product__image
                                img(src="images/cake/img-cake-6.jpg" alt="")
                            .ps-product__image
                                img(src="images/cake/img-cake-5.jpg" alt="")
                        .owl-slider.second.mb-30(
                        data-owl-auto= 'true',
                        data-owl-loop= 'false',
                        data-owl-speed= '10000',
                        data-owl-gap= '20',
                        data-owl-nav= 'false',
                        data-owl-dots= 'false',
                        data-owl-animate-in= '',
                        data-owl-animate-out= '',
                        data-owl-item= '4',
                        data-owl-item-xs= '2',
                        data-owl-item-sm= '3',
                        data-owl-item-md= '4',
                        data-owl-item-lg= '4',
                        data-owl-nav-left = '<i class="fa fa-angle-left"></i>',
                        data-owl-nav-right = '<i class="fa fa-angle-right"></i>',
                        )
                            img(src="images/cake/img-cake-12.jpg" alt="")
                            img(src="images/cake/img-cake-11.jpg" alt="")
                            img(src="images/cake/img-cake-10.jpg" alt="")
                            img(src="images/cake/img-cake-6.jpg" alt="")
                            img(src="images/cake/img-cake-5.jpg" alt="")

                +column({cols: [7, 7, 12, 12]})
                    header
                        h3.ps-product__name Anytime Cakes
                        select.ps-rating
                            option(value='1') 1
                            option(value='1') 2
                            option(value='1') 3
                            option(value='1') 4
                            option(value='5') 5
                        p.ps-product__price £15.00 <del>£25.00</del>
                        a(href='#quickview-modal' data-effect="mfp-zoom-out").ps-product__quickview.popup-modal QUICK OVERVIEW
                        .ps-product__description
                            p Lollipop dessert donut marzipan cookie bonbon sesame snaps chocolate. Cupcake sweet roll sweet dragée dragée. Lollipop dessert donut marzipan cookie bonbon sesame snaps chocolate cake.
                            p Toffee chocolate cake apple pie sugar plum sesame snaps muffin cake pudding cupcake. Muffin danish muffin lollipop biscuit jelly beans oat cake croissant.
                        .ps-product__meta
                            p <span> Availability: </span> In stock
                            p.category <span>CATEGORIES: </span>
                                a(href='product-grid.html') Cupcake
                                | ,
                                a(href='product-grid.html')  organic
                                | ,
                                a(href='product-grid.html')  sugar
                                | ,
                                a(href='product-grid.html')  sweet
                                | ,
                                a(href='product-grid.html')  bio
                        .form-group.ps-product__size
                            label Size:
                            select.ps-select(data-placeholder="Popupar product")
                                option(value="01") CHOOSE AN OPTION
                                option(value="01") Item 01
                                option(value="02") Item 02
                                option(value="03") Item 03
                        .ps-product__shop
                            .form-group--number
                                button.minus: span -
                                input(type="text" class="form-control" value="1")
                                button.plus: span +
                            ul.ps-product__action
                                li: a(href='#' data-tooltip="Add to wishlist"): i.ps-icon--heart
                                li: a(  href='#' data-tooltip="Compare"): i.ps-icon--reload
                    footer
                        .row
                            +column({cols: [6, 5, 6, 12]})
                                a(href='#').ps-btn--fullwidth.ps-btn Purchase Now
                                    i.fa.fa-angle-right
                            +column({cols: [6, 7, 6, 12]})
                                p.ps-product__sharing Share with:
                                    a(href='#'): i.fa.fa-facebook
                                    a(href='#'): i.fa.fa-google-plus
                                    a(href='#'): i.fa.fa-twitter

            .ps-product__info
                ul(class="tab-list" role="tablist")
                    li.active
                        a(href="#tab_01" aria-controls="tab_01" role="tab" data-toggle="tab") Overview
                    li
                        a(href="#tab_02" aria-controls="tab_02" role="tab" data-toggle="tab") Review
                    li
                        a(href="#tab_03" aria-controls="tab_03" role="tab" data-toggle="tab") PRODUCT TAG
                    li
                        a(href="#tab_04" aria-controls="tab_04" role="tab" data-toggle="tab") ADDITIONAL
            .tab-content.mb-60
                .tab-pane.active(role='tabpanel')#tab_01
                    p Caramels tootsie roll carrot cake sugar plum. Sweet roll jelly bear claw liquorice. Gingerbread lollipop dragée cake. Pie topping jelly-o. Fruitcake dragée candy canes tootsie roll. Pastry jelly-o cupcake. Bonbon brownie soufflé muffin.
                    p Sweet roll soufflé oat cake apple pie croissant. Pie gummi bears jujubes cake lemon drops gummi bears croissant macaroon pie. Fruitcake tootsie roll chocolate cake Carrot cake cake bear claw jujubes topping cake apple pie. Jujubes gummi bears soufflé candy canes topping gummi bears cake soufflé cake. Cotton candy soufflé sugar plum pastry sweet roll..
                .tab-pane(role='tabpanel')#tab_02
                    p 1 review for Cupcakes Red Flowers
                    .ps-review-box(class=extraClass)
                        .ps-review-box__thumbnail
                            img(src="images/blog/people.png" alt="")
                        .ps-review-box__content
                            header
                                select.ps-rating
                                    option(value='1') 1
                                    option(value='1') 2
                                    option(value='1') 3
                                    option(value='1') 4
                                    option(value='5') 5
                                p By
                                    a(href='')  Alena Studio
                                    |  - November 25, 2017
                            p Soufflé danish gummi bears tart. Pie wafer icing. Gummies jelly beans powder. Chocolate bar pudding macaroon candy canes chocolate apple pie chocolate cake. Sweet caramels sesame snaps halvah bear claw wafer. Sweet roll soufflé muffin topping muffin brownie. Tart bear claw cake tiramisu chocolate bar gummies dragée lemon drops brownie.

                    form(action="_action" method="post").ps-product__review
                        h4 ADD YOUR REVIEW
                        .row
                            +column({cols: [6, 6, 6, 12]})
                                .form-group
                                    label Name:*
                                        span *
                                    input.form-control(type="text" placeholder="")
                                .form-group
                                    label Email: *
                                        span *
                                    input.form-control(type="email" placeholder="")
                                .form-group
                                    label Your rating
                                        span
                                    select.ps-rating
                                        option(value='1') 1
                                        option(value='1') 2
                                        option(value='1') 3
                                        option(value='1') 4
                                        option(value='5') 5
                            +column({cols: [8, 8, 6, 12]})
                                .form-group
                                    label Your Review:
                                    textarea.form-control(rows="6")
                                .form-group
                                    button.ps-btn.ps-btn--sm Submit
                .tab-pane(role='tabpanel')#tab_03
                    p Add your tag <span> *</span>
                    form(action="_action" method="post").ps-product__tags
                        .form-group
                            input.form-control(type="text" placeholder="")
                            button.ps-btn.ps-btn--sm Add Tag
                .tab-pane(role='tabpanel')#tab_04
                    .form-group
                        textarea.form-control(rows='6' placeholder="Enter your addition here...")
                    .form-group
                        button.ps-btn(type="button") Submit

include ../section/relate-product